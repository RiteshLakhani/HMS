@model IEnumerable<Hospital_Management_System.Models.PaymentModel>

<div class="row no-margin-padding">
    <div class="col-md-6">
        <h3 class="block-title">Payments</h3>
    </div>
    <div class="col-md-6">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">
                    <span class="ti-home"></span>
                </a>
            </li>
            <li class="breadcrumb-item">Payments</li>
            <li class="breadcrumb-item active">All Payments</li>
        </ol>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid">
    <div class="row">
        <!-- Widget Item -->
        <div class="col-md-12">
            <div class="widget-area-2 proclinic-box-shadow">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="widget-title">Payments List</h3>
                    <div>
                        <input type="text" id="searchInput" class="form-control search-box ms-2" placeholder="Search anything..." style="max-width: 300px;">
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="table-responsive mb-3">
                    <table id="tableId" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Patient Name</th>
                                <th>Doctor Name</th>
                                <th>Department</th>
                                <th>Service Name</th>
                                @* <th>Admission Date</th>
                                <th>Discharge Date</th> *@
                                <th>Cost of Treatment</th>
                                @* <th>Advanced Paid</th>*@
                                <th>Discount</th> 
                                <th>Amount</th>
                                <th>Payment Date</th>
                                <th>Payment Method</th>
                               @*  <th>Payment Type</th> *@
                                <th>Payment Status</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="paymentTableBody">
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.PatientName</td>
                                    <td>@payment.DoctorName</td>
                                    <td>@payment.Department</td>
                                    <td>@payment.ServiceName</td>
                                   @*  <td>@payment.AdmissionDate?.ToString("dd-MM-yyyy")</td>
                                    <td>@payment.DischargeDate?.ToString("dd-MM-yyyy")</td> *@
                                    <td>@payment.CostOfTreatment.ToString("C")</td>
                                    @* <td>@payment.AdvancedPaid?.ToString("C")</td> *@
                                    <td>@payment.Discount?.ToString("C")</td>
                                    <td>@payment.Amount?.ToString("C")</td>
                                    <td>@payment.PaymentDate.ToString("dd-MM-yyyy")</td>
                                    <td>@payment.PaymentMethod</td>
                                    @* <td>@payment.PaymentType</td> *@
                                    <td>@payment.PaymentStatus</td>
                                    <td>
                                        <span class="badge @(payment.IsConfirmed ? "badge-success" : "badge-danger")">
                                            @(payment.IsConfirmed ? "Confirmed" : "Not Confirmed")
                                        </span>
                                    </td>
                                    <td class="d-flex justify-content-center">
                                        <a asp-action="Add" asp-route-PaymentID="@payment.PaymentID" class="btn btn-sm btn-primary ms-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <form asp-action="Delete" asp-route-PaymentID="@payment.PaymentID" method="post" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this payment?');">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /Widget Item -->
    </div>
</div>

<!-- Script for Search Functionality -->
<script>
    document.getElementById("searchInput").addEventListener("keyup", function () {
        const filter = this.value.trim().toLowerCase();
        const rows = document.querySelectorAll("#paymentTableBody tr");
        rows.forEach(row => {
            const rowText = Array.from(row.children)
                                .map(cell => cell.textContent.trim().toLowerCase())
                                .join(" ");
            row.style.display = rowText.includes(filter) ? "" : "none";
        });
    });
</script>

<script>
    // Auto-hide success and error messages after 5 seconds
    setTimeout(function () {
        $(".alert").fadeOut("slow");
    }, 5000);
</script>
