@model Hospital_Management_System.Models.AppointmentModel

@{
    ViewData["Title"] = ViewData["PageTitle"] ?? "Appointment Form";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary-purple text-white text-center py-3">
            <h2 class="mb-0">@ViewData["PageTitle"]</h2>
        </div>
        <div class="card-body p-4">
            <h6 class="text-danger">@TempData["ErrorMessage"]</h6>
            <form asp-controller="Appointments" asp-action="Save" method="post" class="row g-4">
                <input type="hidden" asp-for="AppointmentID" />

                <!-- Patient Dropdown -->
                <div class="col-md-6">
                    <label class="form-label">Patient Name</label>
                    <select asp-for="PatientID" class="form-select input-field" required>
                        <option value="">Select Patient</option>
                        @foreach (var patient in ViewBag.PatientList as List<Hospital_Management_System.Models.PatientsDropDown>)
                        {
                            <option value="@patient.PatientID">@patient.PatientName</option>
                        }
                    </select>
                    <span asp-validation-for="PatientID" class="text-danger"></span>
                </div>

                <!-- Doctor Dropdown -->
                <div class="col-md-6">
                    <label class="form-label">Doctor Name</label>
                    <select asp-for="DoctorID" class="form-select input-field" required>
                        <option value="">Select Doctor</option>
                        @foreach (var doctor in ViewBag.DoctorList as List<Hospital_Management_System.Models.DoctorsDropDown>)
                        {
                            <option value="@doctor.DoctorID">@doctor.DoctorName</option>
                        }
                    </select>
                    <span asp-validation-for="DoctorID" class="text-danger"></span>
                </div>

                <!-- Appointment Date -->
                <div class="col-md-6">
                    <label class="form-label">Appointment Date</label>
                    <input asp-for="AppointmentDate" type="date" class="form-control input-field" required />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <!-- Appointment Time -->
                <div class="col-md-6">
                    <label class="form-label">Appointment Time</label>
                    <input asp-for="AppointmentTime" type="time" class="form-control input-field" required />
                    <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                </div>

                <!-- Token Number -->
                @if (Model.AppointmentID > 0)
                {
                    <div class="col-md-12">
                        <label class="form-label">Token Number</label>
                        <input asp-for="TokenNumber" type="text" class="form-control input-field" readonly />
                        <span asp-validation-for="TokenNumber" class="text-danger"></span>
                    </div>
                }

                <!-- Problem -->
                <div class="col-md-12">
                    <label class="form-label">Problem</label>
                    <textarea asp-for="Problem" class="form-control input-field textarea-field" rows="3" required></textarea>
                    <span asp-validation-for="Problem" class="text-danger"></span>
                </div>

                <!-- Status Dropdown -->
                <div class="col-md-6">
                    <label class="form-label">Status</label>
                    <select asp-for="Status" class="form-select input-field" required>
                        <option value="">Select Status</option>
                        <option value="Scheduled">Scheduled</option>
                        <option value="Completed">Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-success action-button">Save</button>
                    <a href="@Url.Action("Index", "Appointments")" class="btn btn-secondary action-button ms-3">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-primary-purple {
        background: linear-gradient(135deg, #4B0082, #6A0DAD) !important;
    }

    .container {
        max-width: 900px;
    }

    .card {
        border-radius: 12px;
        padding: 20px;
    }

    .form-label {
        font-weight: 600;
    }

    .input-field {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        height: 48px;
        width: 100%;
    }

    .textarea-field {
        height: auto !important;
        min-height: 100px;
    }

    .col-md-6, .col-md-12 {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .action-button {
        font-size: 18px;
        border-radius: 8px;
        padding: 12px 24px;
    }
</style>
